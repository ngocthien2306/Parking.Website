@using Microsoft.AspNetCore.Identity
@using InfrastructureCore.Models.Identity;
@using System.Security.Claims; 
@inject InfrastructureCore.Web.Services.IService.IUserService UserService;

    <ul class="navbar-nav">
        @if (this.User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
            <li class="nav-item">
                <span class="marker marker--secondary">UserManager.GetCurrentUser(this.Context).Name:</span> @UserService.GetCurrentUser(this.Context).FullName
            </li>
            <li class="nav-item">
                <span class="marker marker--secondary">User.HasClaim(ClaimTypes.Role, "Administrator"):</span> @User.Claims.FirstOrDefault().Value
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
