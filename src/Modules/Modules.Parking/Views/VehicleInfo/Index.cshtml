                                    <div class="mr-2">
                                        @(Html.DevExtreme().FileUploader()
                                        .Name("imageFaceTaken")
                                        .Accept("*")
                                        .Multiple(false)
                                        .ID(facePhoto)
                                        .AllowedFileExtensions(new[] { ".jpg", ".jpeg", ".gif", ".png" })
                                        .UploadMode(FileUploadMode.Instantly)
                                        .UploadUrl(Url.Action("UploadImageTaken", "MemberMgt") + "?userId=" + ViewBag.UserCode)
